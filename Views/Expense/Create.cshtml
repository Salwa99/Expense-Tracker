@model Expense_Tracker.Models.Expense

@{
    ViewData["Title"] = "Add Expense";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg p-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Add New Expense</h2>
            <a asp-action="Index" class="text-blue-600 hover:text-blue-800">Back to List</a>
        </div>

        <form asp-controller="Expense" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <input asp-for="Description" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Description" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-1">Amount</label>
                <input asp-for="Amount" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Amount" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Date" class="block text-sm font-medium text-gray-700 mb-1">Date</label>
                <input asp-for="Date" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Date" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                <select asp-for="CategoryId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Select a category</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-sm text-red-500"></span>
            </div>

            <div class="flex justify-end space-x-4">
                <a asp-controller="Dashboard" asp-action="Index" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">Cancel</a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Create Expense</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}