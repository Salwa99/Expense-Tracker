@model Expense_Tracker.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Create your account</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <div class="mb-4">
                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                <input asp-for="FirstName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                <input asp-for="LastName" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors">
                Register
            </button>

            <div class="mt-4 text-center text-gray-600">
                Already have an account?
                <a asp-action="Login" class="text-blue-600 hover:text-blue-800">Login here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}